@using BanHangDienTu.Models
@model List<Products>
@{
    ViewData["Title"] = "Cart";
}

<h1>Giỏ hàng của bạn</h1>

<br/>
<div class="row">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Hình ảnh</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Loại sản phẩm</th>
            <th>Màu sắc</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/@item.Image" width="200px" height="150px"/>
                </td>
                <td>@item.Name</td>
                <td>@string.Format("{0:0,0}", @item.Price) VNĐ</td>
                <td>@item.ProductTypes.ProductType</td>
                <td>@item.ProductColor</td>               
                <td>
                    <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                        Xóa
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Trở về trang chủ</a>
    </div>
    <div class="col-6 text-right">
        <h3>tổng cộng</h3>
        <h3>Thành tiền : @string.Format("{0:0,0}", @Model.Sum(c=>c.Price)) VNĐ  </h3>
        <a asp-area="Customer" asp-action="Checkout" asp-controller="Order" class="btn btn-info">Thanh toán</a>
    </div>
</div>
