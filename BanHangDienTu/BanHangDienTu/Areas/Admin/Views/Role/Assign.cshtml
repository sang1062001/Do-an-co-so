@model BanHangDienTu.Areas.Admin.Models.RoleUserVm
@{
    ViewData["Title"] = "Assign";
}
<br />

<h2 class="text-info">Phân quyền</h2>
<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>@ViewBag.mgs</h3>
       
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserId">Mã người dùng</label>
            </div>
            <div class="col-5">
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
                @*<input asp-for="ProductTypeId" class="form-control"/>*@
            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RoleId">Mã vai trò</label>
            </div>
            <div class="col-5">
                <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>
                @*<input asp-for="SpecialTagId" class="form-control" />*@
            </div>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Phân quyền" />
            <a asp-action="Index" class="btn btn-success">Trở về danh sách</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

